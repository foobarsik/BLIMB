{
  "name": "BLIMB - Protect your eyes",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Reminds you to take breaks and helps you with eye exercises.",
  "icons": {
    "16": "images/on.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": "images/on.png",
    "default_popup": "popup.html",
    "default_title": "BLIMB - Protect your eyes"
  },

  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "\u003Call_urls\u003E"
  ],
  "web_accessible_resources": [
    "js/*",
    "css/*",
    "images/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
